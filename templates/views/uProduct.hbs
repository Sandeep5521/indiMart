    <script>
        const capital = (str) => {
            let temp = str.slice(0, 1);
            temp = temp.toUpperCase();
            temp += str.slice(1, str.length);
            return temp;
        }
        const funcp = async () => {
            let tmp = await fetch(`https://martdb.onrender.com/products?id={{id}}`)
            tmp = await tmp.json()
            console.log(tmp);
            const val = tmp
            document.title = val.title;
            document.getElementById('brand').innerHTML = `<span>Brand:</span> ${val.brand}`
            let sTitle = val.category;
            let li = sTitle.split('-');
            sTitle = '';
            for (let j = 0; j < li.length; j++) sTitle += (capital(li[j]) + ' ');
            document.getElementById('cat').innerHTML = `<span>Categories:</span> ${sTitle}`;
            document.getElementById('cTitle').innerHTML = sTitle;
            if (val.discountPrice) document.getElementById('price').innerHTML = `₹${val.discountPrice} <span>₹${val.price}</span>`
            else document.getElementById('price').innerHTML = `₹${val.price}`
            let shots = document.getElementById('shots')
            let Tabs = document.getElementById('Tab')
            let img = val.images
            let one = 'active'
            const len = (img.length >= 4) ? 4 : img.length;
            for (let i = 0; i < len; i++) {
                Tabs.innerHTML += `<li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#tabs-${i + 1}" role="tab">
                                    <div class="product__thumb__pic pro" style="background-image:url('${img[i]}')">
                                    </div>
                                </a>
                            </li>`;
                shots.innerHTML += `<div class="tab-pane ${one}" id="tabs-${i + 1}" role="tabpanel">
                                <div class="product__details__pic__item">
                                    <img src="${img[i]}" alt="">
                                </div>
                            </div>`;
                one = '';
            }
            document.getElementById('title').innerHTML = `${val.title}`
            document.getElementById('ntitle').innerHTML = `${val.title}`
            document.getElementById('des').innerHTML = `${val.description}`
        }
        funcp()
        const funcr = async () => {
            let tmp = await fetch(`https://martdb.onrender.com/products?cat={{cat}}`)
            tmp = await tmp.json()
            const val = tmp.filter((curr) => {
                if (curr._id != '{{id}}') return curr;
            })
            console.log(val);
            for (let i = 0; i < val.length; i++) {
                let price = `₹${val[i].price}`
                if (val[i].discountPrice) price = `₹${val[i].discountPrice}<span class="fs-6 text-muted" style="text-decoration: line-through;margin-left: 1rem;font-weight: lighter;">₹${val[i].price}</span>`;
                document.getElementById('rel').innerHTML += `<div class="col-lg-3 col-md-6 col-sm-6 col-sm-6" onclick="go('{{cat}}','${val[i]._id}')">
                    <div class="product__item sale">
                        <div class="product__item__pic pro" style="background-image:url('${val[i].thumbnail}');">
                            <span class="label">Sale</span>
                        </div>
                        <div class="product__item__text">
                            <h6>${val[i].title}</h6>
                            <a href="#" class="add-cart">Shop Now</a>
                            <div class="rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                            <h5>₹${price}</h5>
                        </div>
                    </div>
                </div>`
            }
        }
        funcr()
        const go = (c, n) => {
            open(`/product?cat=${c}&id=${n}`, '_self')
        }
        let flag = {{ check }}
        if (flag) document.getElementById('postp').innerText = 'delete from cart';
        else document.getElementById('postp').innerText = 'add to cart';
        const postp = async () => {
            let param;
            if (flag) param = 'DELETE'
            if (!flag) param = 'POST'
            const options = {
                method: param,
                headers: {
                    'content-type': 'application/json'
                },
                body: JSON.stringify({
                    id: '{{id}}'
                })
            };

            try {
                let tmp = await fetch('/cart', options)
                tmp = await tmp.json()
                console.log(tmp);
                if (tmp && !flag) {
                    document.getElementById('postp').innerText = 'delete from cart';
                    flag++;
                }
                else if (tmp && flag) {
                    document.getElementById('postp').innerText = 'add to cart';
                    flag--;
                }
            } catch (error) {
                console.log("bug");
            }
        }
    </script>
