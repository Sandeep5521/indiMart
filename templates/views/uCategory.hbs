    <script>
        let le = document.getElementById('lele')
        const addp = (Sort) => {
            fetch(`https://martdb.onrender.com/products?cat={{shop}}`)
                .then(res => res.json())
                .then((tmp) => {
                    console.log(tmp)
                    let val = tmp
                    if (Sort > 0) val.sort((a, b) => {
                        let ap = a.price;
                        if (a.discountPrice) ap = a.discountPrice;
                        let bp = b.price;
                        if (b.discountPrice) bp = b.discountPrice;
                        return ap - bp;
                    })
                    if (Sort < 0) val.sort((a, b) => {
                        let ap = a.price;
                        if (a.discountPrice) ap = a.discountPrice;
                        let bp = b.price;
                        if (b.discountPrice) bp = b.discountPrice;
                        return bp - ap;
                    })
                    console.log(val)
                    le.innerHTML = ''
                    document.getElementById('results').innerText = `Showing 1-12 of ${val.length} results`
                    for (let i = 0; i < val.length; i++) {
                        let price = `₹${val[i].price}`
                        if (val[i].discountPrice) price = `₹${val[i].discountPrice}<span class="fs-6 text-muted" style="text-decoration: line-through;margin-left: 1rem;font-weight: lighter;">₹${val[i].price}</span>`;
                        le.innerHTML += `<div class="col-lg-4 col-md-6 col-sm-6" onclick="go('{{shop}}','${val[i]._id}')">
                            <div class="product__item">
                                <div class="product__item__pic pro" style="background-image: url('${val[i].thumbnail}');">
                                </div>
                                <div class="product__item__text">
                                    <h6>${val[i].title}</h6>
                                    <a href="#" class="add-cart">Shop Now</a>
                                    <div class="rating">
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                        <i class="fa fa-star-o"></i>
                                    </div>
                                    <h5>${price}</h5>
                                </div>
                            </div>
                        </div>`
                    }
                })
        }
        addp(0)
        const go = (c, n) => {
            open(`/product?cat=${c}&id=${n}`, '_self')
        }
    </script>
